<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/gamesFragment">

    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.example.tennisteamtracker.games.GamesFragment"
        android:label="@string/games_fragment"
        tools:layout="@layout/fragment_games" >
        <action
            android:id="@+id/action_gamesFragment_to_addGameDayFragment"
            app:destination="@id/addGameDayFragment" />
    </fragment>
    <fragment
        android:id="@+id/rosterFragment"
        android:name="com.example.tennisteamtracker.roster.RosterFragment"
        android:label="@string/roster_fragment"
        tools:layout="@layout/fragment_roster" >
        <action
            android:id="@+id/action_rosterFragment_to_addNewPlayerFragment"
            app:destination="@id/addNewPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.example.tennisteamtracker.StatsFragment"
        android:label="@string/stats_fragment"
        tools:layout="@layout/fragment_stats" />
    <fragment
        android:id="@+id/addNewPlayerFragment"
        android:name="com.example.tennisteamtracker.addnewplayer.AddNewPlayerFragment"
        android:label="Add New Player" >
        <action
            android:id="@+id/action_addNewPlayerFragment_to_rosterFragment"
            app:destination="@id/rosterFragment"
            app:popUpTo="@id/rosterFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addGameDayFragment"
        android:name="com.example.tennisteamtracker.addgameday.AddGameDayFragment"
        android:label="Add New GameDay"
        tools:layout="@layout/fragment_add_game_day" >
        <action
            android:id="@+id/action_addGameDayFragment_to_addGamesFragment"
            app:destination="@id/addGamesFragment"
            app:popUpTo="@id/gamesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addGamesFragment"
        android:name="com.example.tennisteamtracker.addgames.AddGamesFragment"
        android:label="Add Games"
        tools:layout="@layout/fragment_add_games" >
        <action
            android:id="@+id/action_addGamesFragment_to_gamesFragment"
            app:destination="@id/gamesFragment"
            app:popUpTo="@id/gamesFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>